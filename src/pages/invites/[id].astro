---
import Base from "../../layouts/Base.astro";

import Arrow from "../../assets/svg/arrow_black.svg"

const {id} = Astro.params;
import {getInviteById} from "../../../backend/backend.mjs";
const invite = await getInviteById(id);
---

<Base Titre=`${invite.prenom} ${invite.nom}`>
    <div class="flex flex-col gap-12 py-12">
        <div class="flex flex-col gap-5 items-center">
            <h2>{invite.prenom} {invite.nom}</h2>
            <img src={invite.img} alt=`Portrait de ${invite.prenom} ${invite.nom}`>
        </div>
        <div class="flex flex-col gap-5 items-center p-5">
            <h2>Biographie</h2>
            <p>{invite.bio}</p>
            <a href={invite.wikipedia} class="button-link">
                Page Wikip√©dia
                <Arrow />
            </a>
        </div>
        <div class="flex flex-col gap-5 items-center p-5">
            <h2>Intervention</h2>
            <p>{invite.interventions}</p>
        </div>
    </div>
</Base>