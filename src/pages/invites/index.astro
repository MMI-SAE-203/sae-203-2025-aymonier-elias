---
import Base from "../../layouts/Base.astro";

import CardInvite from "../../components/Card_invite.astro";

import {getInvite} from "../../../backend/backend.mjs";
const invites = await getInvite();
---

<Base Titre="Invités">
    <div class="flex flex-col items-center mt-12">
        <h2>Tout nos invités cette année</h2>
        <div class="flex flex-wrap justify-between gap-y-5 px-5 lg:px-40  py-10">
            {
                invites.map((invite) => (
                    <CardInvite {...invite} />
                ))
            }
        </div>
    </div>
</Base>