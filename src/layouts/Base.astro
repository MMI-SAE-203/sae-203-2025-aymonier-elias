---
import "../styles/global.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { Titre } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{Titre}</title>
</head>
<body class="bg-white">
	<Header Hero={Titre} />
	<slot />
	<Footer />
</body>
</html>